<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="arraysort.project.board.app.like.mapper.PostLikeMapper">

    <!-- 게시글 좋아요 추가 -->
    <insert id="insertPostLike">
        insert into post_like(user_id, post_id)
        values (#{userId}, #{postId})
    </insert>

    <!-- 게시글 좋아요 개수 조회 -->
    <select id="selectPostLikeCount" parameterType="long" resultType="long">
        select count(*)
        from post_like
        where post_id = #{postId}
    </select>

    <!-- 게시글 좋아요 여부 조회(유저 ID) -->
    <select id="selectPostLikeCountByUserId" resultType="boolean">
        select count(*) > 0
        from post_like
        where user_id = #{userId} and post_id = #{postId}
    </select>

    <delete id="deletePostLike">
        delete
        from post_like
        where user_id = #{userId} and post_id = #{postId}
    </delete>

    <!-- 게시글 싫어요 추가 -->
    <insert id="insertPostDislike">
        insert into post_dislike(user_id, post_id)
        values (#{userId}, #{postId})
    </insert>

    <!-- 게시글 싫어요 개수 조회 -->
    <select id="selectPostDislikeCount" parameterType="long" resultType="long">
        select count(*)
        from post_dislike
        where post_id = #{postId}
    </select>

    <!-- 게시글 싫어요 여부 조회(유저 ID) -->
    <select id="selectPostDislikeCountByUserId" resultType="boolean">
        select count(*) > 0
        from post_dislike
        where user_id = #{userId} and post_id = #{postId}
    </select>

    <delete id="deletePostDislike">
        delete
        from post_dislike
        where user_id = #{userId} and post_id = #{postId}
    </delete>

</mapper>
